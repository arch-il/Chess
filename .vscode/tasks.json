{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "${workspaceRoot}/.vscode/hold_window.cpp", // hold the window open
                
                "${workspaceRoot}/src/main.cpp", // main file

                // add source files here
                // "${workspaceRoot}/src/example.cpp",

                // enable warnings
                "-Wall",
                "-Wextra",
                "-pedantic",

                "-I${workspaceRoot}/inc", // include path
                "-g",
                "--std=c++17", // version of c++
                "-o",
                "${workspaceRoot}/bin/main.exe" // output file
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}